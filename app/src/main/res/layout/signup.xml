<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Black_text_Material">


    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:background="#d0d0d0"
        android:layout_below="@+id/login_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/view" />


    <TextView
        android:id="@+id/login_text"
        android:text="注册"
        android:textColor="#626262"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <com.rey.material.widget.EditText
        android:id="@+id/sign_username"
        android:textSize="18sp"
        android:maxLines="1"
        app:et_labelEnable="true"
        app:et_labelTextSize="15sp"
        app:et_labelTextColor="@color/label_text_color"
        app:et_supportLines="1"
        app:et_dividerErrorColor="@color/error_color"
        app:et_supportMaxLines="1"
        app:et_supportMaxChars="16"
        app:et_supportMode="none"
        app:et_supportSingleLine="true"
        android:hint="用户名"
        android:textColorHint="#6b6b6b"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp" />

    <com.rey.material.widget.Button
        android:id="@+id/btn_sign_up"
        style="@style/Material.Drawable.Ripple.Wave"
        android:text="注册"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@color/app_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/sign_password_confirm"
        android:layout_alignStart="@+id/sign_password_confirm"
        app:rd_enable="true"/>

    <com.rey.material.widget.EditText
        android:id="@+id/sign_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="18sp"
        app:et_labelEnable="true"
        app:et_labelTextSize="15sp"
        app:et_labelTextColor="@color/label_text_color"
        app:et_supportLines="1"
        app:et_dividerErrorColor="@color/error_color"
        app:et_supportMaxLines="1"
        app:et_supportMaxChars="16"
        app:et_supportMode="charCounter"
        app:et_supportSingleLine="true"
        android:hint="密码"
        android:textColorHint="#6b6b6b"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/sign_username"
        android:layout_alignStart="@+id/sign_username" />

    <com.rey.material.widget.EditText
        android:id="@+id/sign_password_confirm"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="18sp"
        app:et_labelEnable="true"
        app:et_labelTextSize="15sp"
        app:et_labelTextColor="@color/label_text_color"
        app:et_supportLines="1"
        app:et_dividerErrorColor="@color/error_color"
        app:et_supportMaxLines="1"
        app:et_supportMaxChars="16"
        app:et_supportMode="helperWithError"
        app:et_supportSingleLine="true"
        android:hint="确认密码"
        android:textColorHint="#6b6b6b"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/sign_password"
        android:layout_alignStart="@+id/sign_password" />


</RelativeLayout>