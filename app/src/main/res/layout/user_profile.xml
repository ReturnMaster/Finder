<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/app_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:src="@drawable/test"
            android:layout_width="98dp"
            android:layout_height="98dp"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp" />

        <TextView
            android:id="@+id/username"
            android:text="Username"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/signature"
            android:text="This is my signature"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true" />

        <com.mikepenz.iconics.view.IconicsImageView
            app:iiv_icon="ion-ios-gear-outline"
            app:iiv_color="#ffffff"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/user_info"
            android:layout_marginEnd="27dp"
            android:layout_alignTop="@+id/avatar"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_pic"
        android:layout_width="330dp"
        android:layout_height="160dp"
        android:background="@drawable/fillet"
        android:layout_marginTop="206dp"
        android:elevation="3dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_post"
        android:background="@drawable/fillet"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:elevation="6dip"
        android:layout_below="@+id/user_pic"
        android:layout_alignStart="@+id/user_pic"
        android:layout_marginTop="18dp">

    </RelativeLayout>

</RelativeLayout>